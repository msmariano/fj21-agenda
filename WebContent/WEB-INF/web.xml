<?xml version="1.0" encoding="UTF-8"?>
<web-app id="WebApp_ID" version="2.5"
 xmlns="http://java.sun.com/xml/ns/javaee"
 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
 <display-name>fj21-agenda</display-name>
 <servlet>
  <servlet-name>adicionaContato</servlet-name>
  <servlet-class>br.com.caelum.agenda.servlet.AdicionaContatoServlet</servlet-class>
 </servlet>
 <servlet>
  <servlet-name>mvc</servlet-name>
  <servlet-class>br.com.caelum.mvc.ControllerServlet</servlet-class>
 </servlet>
 <servlet>
  <servlet-name>servletOiMundo</servlet-name>
  <servlet-class>br.com.caelum.servlet.OiMundo</servlet-class>
 </servlet>
 <servlet>
  <servlet-name>alteraContato</servlet-name>
  <servlet-class>br.com.caelum.agenda.servlet.AlteraContatoServlet</servlet-class>
 </servlet>
 <servlet-mapping>
  <servlet-name>mvc</servlet-name>
  <url-pattern>/mvc</url-pattern>
 </servlet-mapping>
 <servlet-mapping>
  <servlet-name>adicionaContato</servlet-name>
  <url-pattern>/adicionaContato</url-pattern>
 </servlet-mapping>
 <servlet-mapping>
  <servlet-name>alteraContato</servlet-name>
  <url-pattern>/alteraContato</url-pattern>
 </servlet-mapping>
 <servlet-mapping>
  <servlet-name>servletOiMundo</servlet-name>
  <url-pattern>/oi</url-pattern>
 </servlet-mapping>
 <welcome-file-list>
  <welcome-file>bemvindo.jsp</welcome-file>
 </welcome-file-list>
 <error-page>
  <exception-type>java.lang.Exception</exception-type>
  <location>/erro.html</location>
 </error-page>
 <error-page>
  <error-code>404</error-code>
  <location>/404.html</location>
 </error-page>
 
 <filter>
<filter-name>meuFiltro</filter-name>
<filter-class>br.com.caelum.agenda.filtro.FiltroTempoDeExecucao</filter-class>
</filter>
<filter-mapping>
<filter-name>meuFiltro</filter-name>
<url-pattern>/*</url-pattern>
</filter-mapping>

</web-app>
